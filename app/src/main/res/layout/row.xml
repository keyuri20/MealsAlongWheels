<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/row">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="TIMING"
        android:id="@+id/busTiming"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:typeface="serif"
        android:paddingRight="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="Minutes"
        android:id="@+id/minutes"
        android:layout_gravity="right"
        android:typeface="serif"
        android:layout_below="@+id/busTiming"
        android:layout_alignEnd="@+id/busTiming"
        android:paddingBottom="1dip"
        android:paddingRight="6dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="FOR ID"
        android:id="@+id/busID"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/slider"
        android:typeface="serif"
        android:paddingLeft="6dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="STOPS"
        android:id="@+id/button"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/busStop"
        android:typeface="serif"
        android:background="#009688"
        android:paddingRight="6dp"
        />

    <!--<Button
        android:id="@+id/button"
        android:text="Button"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="FOR BUS DIRECTION"
        android:id="@+id/busDirection"
        android:layout_below="@id/busID"
        android:typeface="serif"
        android:paddingTop="8dip"
        android:paddingLeft="6dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="FOR BUS STOPS"
        android:id="@+id/busStop"
        android:layout_below="@id/busDirection"
        android:typeface="serif"
        android:paddingLeft="6dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slider"
        android:visibility="gone"
        android:id="@+id/slider"
        />
</RelativeLayout>